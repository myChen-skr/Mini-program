/* pages/player/player.wxss */
.player-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  filter: blur(40rpx);
  opacity: 0.5;
  z-index: -1;
}

.player-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  background-color: #222222;
}

.player-info {
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.player-disc {
  width: 592rpx;
  height: 592rpx;
  background: url('https://xiaocx-skr.oss-cn-beijing.aliyuncs.com/disc.png') no-repeat center/contain;
  position: absolute;
  left: 11%;
  top: 10%;
  /* transform: translate(-50%ï¼Œ140rpx); */
}

.player-disc::after {
  content: '';
  width: 192rpx;
  height: 274rpx;
  position: absolute;
  top: -150rpx;
  left: 266rpx;
  background: url('https://xiaocx-skr.oss-cn-beijing.aliyuncs.com/needle.png') no-repeat center/contain;
  transform: rotate(-15deg);
  transform-origin: 24rpx 10rpx;
  transition: transform 0.8s ease;
}
.playing.player-disc::after{
  transform: rotate(0deg);
}

.player-img {
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -184rpx;
  margin-left: -184rpx;
}
.zhuan{
  animation: disc 12s linear infinite;
}
@keyframes disc{
  from{
    transform:rotate(0deg);
  }to{
    transform:rotate(360deg);
  }
}
.ting{
  animation-play-state: paused;
}

.control {
  position: absolute;
  bottom: 8%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
}

.control .iconfont {
  color: #fefefe;
}

.icon-hanhan-01-01, .icon-hanhan-01-011 {
  font-size: 80rpx;
}

.icon-bofang, .icon-zantingtingzhi {
  font-size: 120rpx;
  margin: 0 50rpx;
}


.flex{
  display: flex;
}
.audioPlayer{
  width: 100%;
  height: 1200rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.player{
  width: 100%;
  height: 100%;
  position: relative;
}
.audioBack{
  width: 100%;
  height: 100%;
}
.audioControls{
  width: 100%;
  height: 80rpx;
  background: black;
  opacity: .8;
  position: absolute;
  bottom: 0;
  color: white;
  font-size: 6pt;
  line-height: 80rpx;
  text-align: center;
}
.audioControls .bottom{
  width: 60rpx;
  height: 100%;
}
.audioControls .bottom image{
  margin-top: 30%;
  margin-left: 30%;
  width: 40rpx;
  height: 40rpx;
}
.audioControls .slider{
  width: 520rpx;
  height: 100%;
}
.slider slider{
  width: 95%;
  margin-left: 4%;
  margin-right: 0;
}
.audioControls .time{
  width: 120rpx;
  height: 100%;
}