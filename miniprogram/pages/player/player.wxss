/* pages/player/player.wxss */
.player-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  filter: blur(40rpx);
  opacity: 0.5;
  z-index: -1;
}

.player-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  background-color: #222222;
}

.player-info {
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.player-disc {
  width: 592rpx;
  height: 592rpx;
  background: url('https://xiaocx-skr.oss-cn-beijing.aliyuncs.com/disc.png') no-repeat center/contain;
  position: absolute;
  left: 11%;
  top: 10%;
  /* transform: translate(-50%ï¼Œ140rpx); */
}

.player-disc::after {
  content: '';
  width: 192rpx;
  height: 274rpx;
  position: absolute;
  top: -150rpx;
  left: 266rpx;
  background: url('https://xiaocx-skr.oss-cn-beijing.aliyuncs.com/needle.png') no-repeat center/contain;
  transform: rotate(-15deg);
  transform-origin: 24rpx 10rpx;
}

.player-img {
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -184rpx;
  margin-left: -184rpx;

}

.control {
  position: absolute;
  bottom: 8%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
}

.control .iconfont {
  color: #fefefe;
}

.icon-hanhan-01-01, .icon-hanhan-01-011 {
  font-size: 80rpx;
}

.icon-bofang, .icon-zantingtingzhi {
  font-size: 120rpx;
  margin: 0 50rpx;
}